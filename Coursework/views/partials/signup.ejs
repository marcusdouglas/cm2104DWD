<div id = "signupForm" class = "signupModal">

  <form class = "modal-content animate" action="/adduser" method="POST"> <!-- Server response after action -->
    <div class = "loginImgContainer">
      <span onclick = "signupDisplayNone()" class = "close" title = "Close Modal">&times;</span>
    </div>

    <form class = "signupModal-content">
      <div class = "signupContainer">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr id = "signupHr">
        <label for = "uname"><b>Username</b></label>
        <input id = "uname" class = "signupInput" type = "text" placeholder = "Enter Username" maxlength = "10" name = "uname" required>

        <label for = "psw"><b>Password</b></label>
        <input id = "password" class = "signupInput" type = "password" onchange="checkPasswordMatch()"
        placeholder = "Enter Password" name = "psw" required>

        <label for = "psw-repeat"><b>Repeat Password</b></label>
        <input id = "repeatPassword" class = "signupInput" type = "password" onchange="checkPasswordMatch()"
        placeholder = "Repeat Password" name = "psw-repeat" required>

        <div id = "checkPasswordMatch">
          <p>Password Status: </p>
        </div>

        <!--<label>
          <input type = "checkbox" checked = "checked" name = "remember" style = "margin-bottom:15px"> Remember me
        </label>-->

        <p>By creating an account you agree to our <a href = "#" style = "color:dodgerblue">Terms & Privacy</a>.</p>

        <div class = "signupClearfix">
          <button class = "signupButton signupCancelBtn" type = "button" onclick = "signupDisplayNone()">Cancel</button>
          <a href="/?username=<%= user.username %>"><button id = "confirmSignup" class = "signupButton" type = "submit">Sign Up</button></a>
        </div>
      </div>
    </form>
  </form>
</div>
